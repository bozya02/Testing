<Application x:Class="Prak4.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Prak4"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <LinearGradientBrush x:Key="Russia" EndPoint="0.5,1" StartPoint="0.5,0">
            <GradientStop Color="White" Offset="0.25"/>
            <GradientStop Color="#FF003AFF" Offset="0.5"/>
            <GradientStop Color="Red" Offset="0.83"/>
        </LinearGradientBrush>

        <LinearGradientBrush x:Key="Ukraine" EndPoint="0.5,1" StartPoint="0.5,0">
            <GradientStop Color="Blue" Offset="0.5"/>
            <GradientStop Color="Yellow" Offset="0.5"/>
        </LinearGradientBrush>

        <Style TargetType="Grid">
            <Setter Property="Background" Value="{StaticResource Russia}"/>
        </Style>

        <Style TargetType="DataGrid">
            <Setter Property="Background" Value="{StaticResource Ukraine}"/>
        </Style>
    </Application.Resources>
</Application>
